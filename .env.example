# ESXi Server Configuration
# Copy this file to .env and update with your settings

ESXI_HOST=your.esxi.server.ip
ESXI_USER=root
ESXI_PASSWORD=your_esxi_password

# VM Configuration
VM_MEMORY=8192
VM_CPU=8
VM_DISK_SIZE=500
DATASTORE=your_datastore_name
GO_VERSION=1.24.4

# Optional: SSH Key Path (leave empty to auto-detect)
SSH_KEY_PATH=
